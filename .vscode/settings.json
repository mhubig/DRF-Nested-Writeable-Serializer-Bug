{
    "python.pythonPath": "${env.VIRTUAL_ENV}/bin/python",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.swp": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/node_modules": true
    },
    "python.formatting.provider": "yapf",
    "python.linting.pylintArgs": [
        "--load-plugins",
        "pylint_django"
    ],
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.detectIndentation": false,
        "editor.quickSuggestions": false,
        "editor.tabSize": 4
    },
    "python.linting.pylintEnabled": false
}